/**
 * Implements hook_form()
 * @param $node
 * @param $form_state
 *
 * @return array
 */
function os2web_special_admin_settings_form($node, &$form_state){
    $form = array();

    $form['overview'] = array(
        '#markup' => t("OS2WEB special settings"),
        '#prefix' => "<p>",
        '#suffix' => "</p>"
    );

    // Enable/disable site improve
    $form['os2web_special_enable_siteimprove'] = array(
        '#title' => "Enable siteimprove",
        '#type' => 'checkbox',
        '#required' => false,
        '#default_value' => variable_get("os2web_special_enable_siteimprove")
    );

    // Site improve user id
    $form['os2web_special_siteimprove_user_id'] = array(
        '#title' => "User ID",
        '#type' => 'textfield',
        '#description' => 'Remember to insert your user ID. Ex.: 1480.',
        '#required' => false,
        '#default_value' => variable_get("os2web_special_siteimprove_user_id")
    );
    
    return system_settings_form($form);
}


